{
  "name": "angular-chrome-extension-scaffold",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "watch-angular": "ng build --watch --configuration development --delete-output-path false",
    "watch-chrome-extension-webpack": "webpack watch --mode development -c ./chrome-extension-webpack.config.js",
    "build-dev": "ng build -c development && webpack --mode=development -c ./chrome-extension-webpack.config.js",
    "build-prod": "ng build -c production && webpack --mode=production -c ./chrome-extension-webpack.config.js",
    "test": "ng test"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^14.1.0",
    "@angular/common": "^14.1.0",
    "@angular/compiler": "^14.1.0",
    "@angular/core": "^14.1.0",
    "@angular/forms": "^14.1.0",
    "@angular/platform-browser": "^14.1.0",
    "@angular/platform-browser-dynamic": "^14.1.0",
    "@angular/router": "^14.1.0",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^14.1.0",
    "@angular/cli": "~14.1.0",
    "@angular/compiler-cli": "^14.1.0",
    "@types/chrome": "^0.0.193",
    "@types/jasmine": "~4.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-minimizer-webpack-plugin": "^4.0.0",
    "html-minimizer-webpack-plugin": "^4.0.0",
    "jasmine-core": "~4.2.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "ts-loader": "^9.3.1",
    "typescript": "~4.7.2",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  }
}
